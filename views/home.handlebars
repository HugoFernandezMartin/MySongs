<!-- genres navigation -->
<nav class="genres" aria-label="browse by genre">
  {{#each genres}}
    <a href="/genres/{{genre_id}}">{{name}}</a>
  {{/each}}
</nav>

<!-- main hero word -->
<section class="hero full-bleed">
  <h1 class="hero-word">MySongs</h1>
</section>

<!-- main intro photo + vol text -->
<section class="hero-split">
  <img class="hero-img" src="/images/VOL.11.jpg" alt="Listening to music">
  <div class="hero-right">
    <p class="hero-copy">
      Music isn't just sound, it's the chaos, the calm, and the vibe we live
      for. A Gen-Z diary written in basslines, late nights, and lyrics that hit
      like texts from a best friend.
    </p>
    <h2 class="hero-title">VOL.1</h2>
  </div>
</section>

<!-- red section with album cards -->
<section class="featured">
  <h3 class="featured-title">FOUNDERS SELECTION</h3>

  <div class="featured-wrap">
    <!-- arrow buttons -->
    <button class="featured-arrow featured-left" aria-label="Previous">‹</button>

    <!-- album list -->
    <div class="featured-track" role="list">
      <article class="album" role="listitem">
        <img class="album-img" src="/images/drake-album.jpg" alt="Drake ft. 21 Savage — Her Loss">
        <p class="album-meta">Drake ft. 21 Savage • Her Loss</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/tyler-album.jpg" alt="Tyler, The Creator — IGOR">
        <p class="album-meta">Tyler, The Creator • IGOR</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/imapala-album.jpg" alt="Tame Impala — The Slow Rush">
        <p class="album-meta">Tame Impala • The Slow Rush</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/kanye-album.jpg" alt="Kanye West — Graduation">
        <p class="album-meta">Kanye West • Graduation</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/guns-album.jpg" alt="Guns N' Roses — Use Your Illusion">
        <p class="album-meta">Guns N' Roses • Use your Illusion</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/sza-album.jpg" alt="SZA — Ctrl">
        <p class="album-meta">SZA • Ctrl</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/gambino-album.jpg" alt="Childish Gambino — Awaken, My Love!">
        <p class="album-meta">Childish Gambino • Awaken, My Love!</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/quevedo-album.jpg" alt="Quevedo — Donde quiero estar">
        <p class="album-meta">Quevedo • Donde quiero estar</p>
      </article>
    </div>

    <!-- next arrow -->
    <button class="featured-arrow featured-right" aria-label="Next">›</button>

    <!-- gradient fades -->
    <div class="featured-fade featured-fade-l"></div>
    <div class="featured-fade featured-fade-r"></div>
  </div>
</section>
<!-- image + floating mini player -->
<section class="home-preview">
  <!-- background photo -->
  <img
    class="hp-bg"
    src="/images/homeFoot.jpg"
    alt="night city photo backdrop"
  />

  <!-- compact card on the right -->
  <div class="hp-card" aria-label="preview some tracks">
    <h3 class="hp-title">My favorite songs</h3>

    <ul class="hp-list">
      <li class="hp-row" data-query="Notion The Days">
        <button class="hp-btn" aria-label="play or pause">►</button>
        <img class="hp-cover" src="/images/notion.jpg" alt="" />
        <div class="hp-meta">
          <strong>The Days</strong>
          <span>Chrystal, Notion</span>
        </div>
        <span class="hp-time">–:–</span>
        <div class="hp-bar"><span></span></div>
      </li>

      <li class="hp-row" data-query="Kanye Carnival">
        <button class="hp-btn" aria-label="play or pause">►</button>
        <img class="hp-cover" src="/images/carnival.jpg.webp" alt="" />
        <div class="hp-meta">
          <strong>Carnival</strong>
          <span>Kanye West</span>
        </div>
        <span class="hp-time">–:–</span>
        <div class="hp-bar"><span></span></div>
      </li>

      <li class="hp-row" data-query="Swae Unforgettable">
        <button class="hp-btn" aria-label="play or pause">►</button>
        <img class="hp-cover" src="/images/unforgettable.jpg" alt="" />
        <div class="hp-meta">
          <strong>Unforgettable</strong>
          <span>French Montana, Swae Lee</span>
        </div>
        <span class="hp-time">–:–</span>
        <div class="hp-bar"><span></span></div>
      </li>
    </ul>
  </div>

  <!-- hidden audio element -->
  <audio id="hp-player" preload="metadata"></audio>
</section>