<!-- genres navigation -->
<nav class="genres">
  {{#each genres}}
    <a href="/genres/{{genre_id}}">{{name}}</a>
  {{/each}}
</nav>

<!-- main hero word -->
<section class="hero full-bleed">
  <h1 class="hero-word">MySongs</h1>
</section>

<!-- main intro photo + vol text -->
<section class="hero-split">
  <img class="hero-img" src="/images/VOL.11.jpg" alt="Listening to music" />
  <div class="hero-right">
    <p class="hero-copy">
      Music isn’t just sound, it’s the chaos, the calm, and the vibe we live
      for. A Gen-Z diary written in basslines, late nights, and lyrics that hit
      like texts from a best friend.
    </p>
    <h2 class="hero-title">VOL.1</h2>
  </div>
</section>

<!-- short about section -->
<section class="intro">
  <div class="intro-text">
    <h2>Hi, we are Hugo & Angelica</h2>
    <p>
      We are the creators of
      <strong>MySongs</strong>, a student project born from our passion for
      music and design. Our goal is to build a space where music discovery feels
      modern, bold, and inspiring. With Hugo focused on the technical side and
      Angelica on the design and aesthetics, we teamed up to create a site that
      not only showcases music releases but also reflects the creative energy
      behind them.
    </p>
  </div>

  <!-- images of founders -->
  <div class="intro-images">
    <img src="/images/hugo.jpg" alt="Hugo" />
    <img src="/images/angelica.jpg" alt="Angelica" />
  </div>
</section>

<!-- red section with album cards -->
<section class="featured">
  <h3 class="featured-title">FOUNDERS SELECTION</h3>

  <div class="featured-wrap">
    <!-- arrow buttons -->
    <button
      class="featured-arrow featured-left"
      aria-label="Previous"
    >‹</button>

    <!-- album list -->
    <div class="featured-track" role="list">
      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/drake-album.jpg"
          alt="Artist • Album 1"
        />
        <p class="album-meta">Drake ft. 21 Savage • Her Loss</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/tyler-album.jpg"
          alt="Artist • Album 2"
        />
        <p class="album-meta">Tyler, The Creator • IGOR</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/imapala-album.jpg"
          alt="Artist • Album 3"
        />
        <p class="album-meta">Tame Impala • The Slow Rush</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/kanye-album.jpg"
          alt="Artist • Album 4"
        />
        <p class="album-meta">Kanye West • Graduation</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/guns-album.jpg"
          alt="Artist • Album 5"
        />
        <p class="album-meta">Guns N' Roses • Use your Ilusion</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/sza-album.jpg"
          alt="Artist • Album 6"
        />
        <p class="album-meta">SZA • Ctrl</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/gambino-album.jpg"
          alt="Artist • Album 7"
        />
        <p class="album-meta">Childish Gambino • Awaken, My Love!</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/quevedo-album.jpg"
          alt="Artist • Album 8"
        />
        <p class="album-meta">Quevedo • Donde quiero estar</p>
      </article>
    </div>

    <!-- next arrow -->
    <button class="featured-arrow featured-right" aria-label="Next">›</button>

    <!-- gradient fades -->
    <div class="featured-fade featured-fade-l"></div>
    <div class="featured-fade featured-fade-r"></div>
  </div>
</section>

<!-- songs list with floating player -->
<section class="songs-section">
  <img
    class="songs-bg"
    src="/young-women-wearing-2000s-fashion.jpg"
    alt="Background"
  />

  <!-- floating card -->
  <div class="songs-card">
    <h3 class="songs-title">My Favorite Songs</h3>

    <!-- songs list -->
    <ul class="songs-list">
      <li class="song-row" data-query="Post Malone Circles">
        <button class="song-btn" aria-label="Play/Pause">►</button>
        <img
          class="song-cover"
          src="/album-img1.jpg"
          alt="Post Malone Circles"
        />
        <div class="song-info">
          <strong>Post Malone</strong>
          <span>Circles</span>
        </div>
        <span class="song-time">–:–</span>
        <div class="song-bar"><span></span></div>
      </li>

      <li class="song-row" data-query="Olivia Rodrigo deja vu">
        <button class="song-btn" aria-label="Play/Pause">►</button>
        <img
          class="song-cover"
          src="/album-img2.jpg"
          alt="Olivia Rodrigo deja vu"
        />
        <div class="song-info">
          <strong>Olivia Rodrigo</strong>
          <span>deja vu</span>
        </div>
        <span class="song-time">–:–</span>
        <div class="song-bar"><span></span></div>
      </li>

      <li class="song-row" data-query="Harry Styles As It Was">
        <button class="song-btn" aria-label="Play/Pause">►</button>
        <img
          class="song-cover"
          src="/album-img3.jpg"
          alt="Harry Styles As It Was"
        />
        <div class="song-info">
          <strong>Harry Styles</strong>
          <span>As It Was</span>
        </div>
        <span class="song-time">–:–</span>
        <div class="song-bar"><span></span></div>
      </li>
    </ul>

    <!-- button to full page -->
    <button class="songs-cta">SEE FULL LIST</button>
  </div>

  <!-- hidden audio player -->
  <audio id="song-player" preload="metadata"></audio>
</section>