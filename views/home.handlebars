<!-- genres navigation -->
<!-- genres navigation -->
<nav class="genres" aria-label="browse by genre">
  {{#each genres}}
    <a href="/genres/{{genre_id}}">{{name}}</a>
  {{/each}}
</nav>

<!-- main hero word -->
<section class="hero full-bleed">
  <h1 class="hero-word">MySongs</h1>
</section>

<!-- main intro photo + vol text (no negative offsets) -->
<section class="hero-split">
  <img class="hero-img" src="/images/VOL.11.jpg" alt="Listening to music" />
  <div class="hero-right">
    <p class="hero-copy">
      Music isn't just sound, it's the chaos, the calm, and the vibe we live
      for. A Gen-Z diary written in basslines, late nights, and lyrics that hit
      like texts from a best friend.
    </p>
    <h2 class="hero-title">VOL.1</h2>
  </div>
</section>

<!-- red section with album cards -->
<section class="featured">
  <h3 class="featured-title">FOUNDERS SELECTION</h3>

  <div class="featured-wrap">
    <!-- arrow buttons -->
    <button
      class="featured-arrow featured-left"
      aria-label="Previous"
    >‹</button>

    <!-- album list -->
    <div class="featured-track" role="list">
      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/drake-album.jpg"
          alt="Drake ft. 21 Savage — Her Loss"
        />
        <p class="album-meta">Drake ft. 21 Savage • Her Loss</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/tyler-album.jpg"
          alt="Tyler, The Creator — IGOR"
        />
        <p class="album-meta">Tyler, The Creator • IGOR</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/imapala-album.jpg"
          alt="Tame Impala — The Slow Rush"
        />
        <p class="album-meta">Tame Impala • The Slow Rush</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/kanye-album.jpg"
          alt="Kanye West — Graduation"
        />
        <p class="album-meta">Kanye West • Graduation</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/guns-album.jpg"
          alt="Guns N' Roses — Use Your Illusion"
        />
        <p class="album-meta">Guns N' Roses • Use your Ilusion</p>
      </article>

      <article class="album" role="listitem">
        <img class="album-img" src="/images/sza-album.jpg" alt="SZA — Ctrl" />
        <p class="album-meta">SZA • Ctrl</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/gambino-album.jpg"
          alt="Childish Gambino — Awaken, My Love!"
        />
        <p class="album-meta">Childish Gambino • Awaken, My Love!</p>
      </article>

      <article class="album" role="listitem">
        <img
          class="album-img"
          src="/images/quevedo-album.jpg"
          alt="Quevedo — Donde quiero estar"
        />
        <p class="album-meta">Quevedo • Donde quiero estar</p>
      </article>
    </div>

    <!-- next arrow -->
    <button class="featured-arrow featured-right" aria-label="Next">›</button>

    <!-- gradient fades -->
    <div class="featured-fade featured-fade-l"></div>
    <div class="featured-fade featured-fade-r"></div>
  </div>
</section>

<!-- songs list with floating player -->
<section class="songs-section">
  <img
    class="songs-bg"
    src="/images/young-women-wearing-2000s-fashion.jpg"
    alt="Fashion background"
  />

  <!-- floating card -->
  <div class="songs-card">
    <h3 class="songs-title">My Favorite Songs</h3>

    <!-- songs list -->
    <ul class="songs-list">
      <li class="song-row" data-query="Post Malone Circles">
        <button
          class="song-btn"
          aria-label="Play or pause Circles by Post Malone"
        >►</button>
        <img
          class="song-cover"
          src="/images/album-img1.jpg"
          alt="Cover art for Circles"
        />
        <div class="song-info">
          <strong>Post Malone</strong>
          <span>Circles</span>
        </div>
        <span class="song-time">–:–</span>
        <div class="song-bar"><span></span></div>
      </li>

      <li class="song-row" data-query="Olivia Rodrigo deja vu">
        <button
          class="song-btn"
          aria-label="Play or pause deja vu by Olivia Rodrigo"
        >►</button>
        <img
          class="song-cover"
          src="/images/album-img2.jpg"
          alt="Cover art for deja vu"
        />
        <div class="song-info">
          <strong>Olivia Rodrigo</strong>
          <span>deja vu</span>
        </div>
        <span class="song-time">–:–</span>
        <div class="song-bar"><span></span></div>
      </li>

      <li class="song-row" data-query="Harry Styles As It Was">
        <button
          class="song-btn"
          aria-label="Play or pause As It Was by Harry Styles"
        >►</button>
        <img
          class="song-cover"
          src="/images/album-img3.jpg"
          alt="Cover art for As It Was"
        />
        <div class="song-info">
          <strong>Harry Styles</strong>
          <span>As It Was</span>
        </div>
        <span class="song-time">–:–</span>
        <div class="song-bar"><span></span></div>
      </li>
    </ul>

    <!-- button to full page -->
    <button class="songs-cta" type="button">SEE FULL LIST</button>
  </div>

  <!-- hidden audio player -->
  <audio id="song-player" preload="metadata"></audio>
</section>