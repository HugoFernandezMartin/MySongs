<main class="contact-page">

  <!-- hero band with giant word -->
  <section class="contact-hero full-bleed" aria-labelledby="contact-title">
    <div class="contact-hero-bg" aria-hidden="true">
      <span class="contact-word">contact</span>
    </div>

    <div class="wrap contact-hero-inner">
      <p class="contact-kicker">about</p>
      <h1 id="contact-title" class="contact-title">get in touch</h1>
      <p class="contact-lede">
        we’re small, fast, and always listening. say hi about new tracks,
        playlists, or collabs.
      </p>
    </div>
  </section>

  <!-- info slab -->
  <section class="contact-slab">
    <div class="wrap contact-grid">
      <div class="contact-block">
        <h2 class="contact-h2">email</h2>
        <p class="contact-line"><strong>hello@mysongsstudio.com</strong></p>
        <p class="contact-note">fastest way — we reply within a day.</p>
      </div>

      <div class="contact-block">
        <h2 class="contact-h2">studio</h2>
        <p class="contact-line">mysongs studio • stockholm, sweden</p>
        <p class="contact-note">appointments only — we keep it cozy.</p>
      </div>

      <div class="contact-block">
        <h2 class="contact-h2">social</h2>
        <p class="contact-line">@mysongs.fm</p>
        <p class="contact-note">clips, drops, and playlists we’re into.</p>
      </div>
    </div>
  </section>

</main>