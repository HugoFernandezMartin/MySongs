<main class="admin-menu">
  {{#if error}}
    <p class="error">{{error}}</p>
  {{/if}}
  {{#if info}}
    <p class="info">{{info}}</p>
  {{/if}}

  <!-- header strip -->
  <section class="admin-hero">
    <div class="wrap admin-hero-inner">
      <h1 class="admin-title">Admin Menu</h1>
      <p class="admin-sub">Manage songs & genres</p>
    </div>
  </section>

  <!-- wide container + two big cards -->
  <section class="wrap">
    <div class="admin-container">
      <div class="admin-grid">

        <!-- SONG MANAGER -->
        <article class="admin-card">
          <h1 class="brand-title">SONG MANAGER</h1>

          <!-- CREATE SONG -->
          <div class="admin-block">
            <h3 class="admin-h2">Create Song</h3>
            <form class="admin-form create-song-form" action="/songs" method="POST" novalidate>
              <div class="field-grid">
                <input type="text" name="title"  placeholder="Title"  required />
                <input type="text" name="author" placeholder="Author" required />
                <input type="text" name="genre"  placeholder="Genre"  required />
                <input type="text" name="album"  placeholder="Album"  required />
                <input type="date" name="release_date" placeholder="Release Date" required />
              </div>
              <button type="submit" class="btn create-song-submit">Create Song</button>
            </form>
          </div>

          <!-- DELETE SONG -->
          <div class="admin-block">
            <h3 class="admin-h2">Delete Song</h3>
            <form class="admin-form delete-song-form" action="/songs/delete" method="POST" novalidate>
              <div class="field-row">
                <input type="text" name="title" placeholder="Title" required />
                <button type="submit" class="btn-outline btn-danger delete-song-submit">Delete Song</button>
              </div>
            </form>
          </div>
        </article>

        <!-- GENRE MANAGER -->
        <article class="admin-card">
          <h1 class="brand-title">GENRE MANAGER</h1>

          <!-- CREATE GENRE -->
          <div class="admin-block">
            <h3 class="admin-h2">Create Genre</h3>
            <form class="admin-form create-genre-form" action="/genres" method="POST" novalidate>
              <div class="field-grid">
                <input type="text" name="name" placeholder="Name" required />
                <textarea name="description" placeholder="Description" rows="5"></textarea>
              </div>
              <button type="submit" class="btn create-song-submit">Create Genre</button>
            </form>
          </div>

          <!-- DELETE GENRE -->
          <div class="admin-block">
            <h3 class="admin-h2">Delete Genre</h3>
            <form class="admin-form delete-genre-form" action="/genres/delete" method="POST" novalidate>
              <div class="field-row">
                <input type="text" name="name" placeholder="Name" required />
                <button type="submit" class="btn-outline btn-danger delete-genre-submit">Delete Genre</button>
              </div>
            </form>
          </div>
        </article>

      </div>
    </div>
  </section>
</main>